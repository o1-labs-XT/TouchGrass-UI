# Use mock API for local development without backend
NEXT_PUBLIC_USE_MOCK_API=true

# Backend API URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000/api

# Mina network (devnet, testnet, or mainnet)
NEXT_PUBLIC_MINA_NETWORK=devnet

# Deployed zkApp contract address (must match backend ZKAPP_ADDRESS)
NEXT_PUBLIC_ZKAPP_ADDRESS=B62qnsomkuMMgcU82EZUfw8FDaYvTypBKFSs1mUiSZrD66gjocfEGBv

# Mina GraphQL endpoint
NEXT_PUBLIC_MINA_GRAPHQL_URL=https://api.minascan.io/node/devnet/v1/graphql

# Blockberry API key (optional, for enhanced blockchain data)
BLOCKBERRY_API_KEY=

# ECDSA signing configuration (server-side only)
ECDSA_PRIVATE_KEY=your_private_key_here
